<Window x:Class="EnglishTrain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishTrain"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="702" Width="1246">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="_WordTest單字測驗" FontSize="80" Background="Black" Foreground="White" Click="WordButton_Click"/>
        <Button Grid.Row="1" Content="_AddWord新增單字" FontSize="80" Background="Black" Foreground="White" Click="AddWordButton_Click"/>
        <Button Grid.Row="2" Content="_Database資料庫" FontSize="80" Background="Black" Foreground="White" Click="DatabaseButton_Click"/>
    </Grid>
</Window>
