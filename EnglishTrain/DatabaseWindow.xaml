<Window x:Class="EnglishTrain.DatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishTrain"
        mc:Ignorable="d" Background="Black" WindowStartupLocation="CenterScreen"
        Title="DatabaseWindow" Height="702" Width="1246">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White" Content="搜尋單字"/>
                <Button Grid.Row="0" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Black" Foreground="White" Content="_Back" Click="BackButton_Click"/>
                <TextBox Grid.Row="1" Name="SearchTextBox" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White" TextChanged="TextBox_TextChanged"/>
            </Grid>
            <Button Grid.Column="1" FontSize="50" Click="RemoveButton_Click" Content="刪除選取的單字" Foreground="White" Background="Black"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <ListBox Name="WordListBox" Grid.Column="0" FontSize="27" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Black" Foreground="White"/>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Name="wordlabel" Foreground="SkyBlue" FontSize="45"/>
                    <Button Grid.Column="1" Content="_Google(▶)" Name="googleButton" Background="Black" Foreground="White" FontSize="30" Click="GoogleButton_Click"/>
                    <Button Grid.Column="3" Content="_Yahoo(▶)" Name="yahooButton" Background="Black" Foreground="White" FontSize="30" Click="YahooButton_Click"/>
                    <Button Grid.Column="4" Content="_Yahoo2(▶)" Name="yahooButton2" Visibility="Hidden" Background="Black" Foreground="White" FontSize="30" Click="YahooButton2_Click"/>
                    <Button Grid.Column="2" Content="_VoiceTube(▶)" Name="voiceTubeButton" Background="Black" Foreground="White" FontSize="30" Click="VoiceTubeButton_Click"/>
                </Grid>
                <Label Grid.Row="1" Name="phoneticlabel" Foreground="SpringGreen" FontSize="22"/>
                <ScrollViewer Grid.Row="2">
                    <Grid Name="dataGrid" VerticalAlignment="Top"/>
                </ScrollViewer>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
